                    <custom:RibbonButton x:Name="BtnFeeCategory" Label="هزینه" LargeImageSource="../Icon/ReceiveMoney.png" Height="Auto" Width="65" Click="BtnFeeCategory_Click"/>
                </custom:RibbonGroup>
            </custom:RibbonTab>
            <custom:RibbonTab Header="گزارشات">
