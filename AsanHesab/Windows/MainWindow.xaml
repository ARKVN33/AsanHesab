                    <custom:RibbonButton x:Name="BtnBankAccount" Label="ثبت حساب" LargeImageSource="../Icon/BankAccount.png" Height="Auto" Width="65" Click="BtnBankAccount_Click"/>
                </custom:RibbonGroup>
            </custom:RibbonTab>
            <custom:RibbonTab Header="دسته‌بندی‌ها">
